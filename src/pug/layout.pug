include mixins

block variables
- let mainTitle = "Propartner";
- let description = "Продавай вместе с Propartner. Каталог товаров и услуг в России.";

doctype html
html( lang="ru" )
  head
    meta( charset="UTF-8" )
    title #{mainTitle} !{title && "| " + title}
    meta( name="description" content= "" + description )
    meta( name="viewport" content="width=device-width, initial-scale=1.0" )
    link( rel="preload" href="fonts/GTEestiProText-Regular.woff2" as="font" type="font/woff2" crossorigin )
    link( rel="preload" href="fonts/GTEestiProText-Bold.woff2" as="font" type="font/woff2" crossorigin )
    link( rel="stylesheet" href="css/style.min.css" )
  body

    include ../components/header/header

    block content

    include ../components/footer/footer

    script( src="js/vendor.min.js" )
